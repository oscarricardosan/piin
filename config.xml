<?xml version='1.0' encoding='utf-8'?>
<widget id="savne.piin.lector" version="1.0.0" versionCode="1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PiiN</name>
    <description>Lector de Punto Inteligente de Informaci√≥n </description>
    <author email="oscar.sanchez@savne.net" href="http://savne.net/">Oscar Sanchez</author>
    <gap:platform name="android" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <icon src="www/images/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <allow-navigation href="*" subdomains="true" />
    <allow-navigation href="*" />
    <engine name="android" spec="^7.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-sqlite-evcore-extbuild-free" spec="0.9.8" />
    <plugin name="phonegap-nfc" spec="https://github.com/chariotsolutions/phonegap-nfc#0.7.3" />
    <plugin name="cordova-plugin-qrscanner" spec="https://github.com/bitpay/cordova-plugin-qrscanner#2.0.0" />
</widget>
